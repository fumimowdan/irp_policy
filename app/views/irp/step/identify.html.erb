<% content_for :back_link do %>
<%= back_link(@step) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= form_with(url: @step.path, model: @step, method: :patch, local: true) do |f| %>
    <%= f.govuk_error_summary %>
      <h1 class="govuk-heading-l">
        <%= @step.question %>
      </h1>

      <%= f.govuk_text_field :first_name, label: { text: @step.first_name_label, size: "s" } %>
      <%= f.govuk_text_field :last_name, label: { text: @step.last_name_label, size: "s" } %>
      <%= f.govuk_text_field :email_address, label: { text: @step.email_address_label, size: "s" } %>


    <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
